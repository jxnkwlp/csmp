# http://editorconfig.org
root = true

[*]
indent_style             = space
indent_size              = 4
end_of_line              = crlf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*cs]
indent_style = tab
tab_width    = 4

[*.xml]
indent_style = space
indent_size  = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
